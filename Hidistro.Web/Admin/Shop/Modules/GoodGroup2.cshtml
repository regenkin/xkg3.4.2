@{string renminbi = "￥";}
<div class="members_con">
   <section class="members_goodspic">
            <ul>
                @if (@Model.goodslist.Count > 0)
                {
                    for (int i = 0; i < @Model.goodslist.Count; i++)
                    {
                        var good = @Model.goodslist[i];
                        <li class="biggoods">
                            <a class="goodsimg" href="@good.link"><img src="@good.pic" width="100%"></a>
                            @if (@Model.showName || @Model.showPrice)
                            {
                                <section class="members_goodsimg_name rename">
                                    @if (@Model.showName)
                                    {
                                        <a href="@good.link"> @good.title </a>
                                    }
                                    <span>
                                        @if (@Model.showIco)
                                        {
                                            <i><a href="@good.link;"></a></i>
                                        }
                                        @if (@Model.showPrice)
                                        {
                                            @renminbi; @good.price;
                                            <span class="original_price">原价：<s>&yen; @good.original_price</s></span>
                                        }
                                    </span>
                                </section>
                            }
                        </li>
                    }
                }
            </ul>
        </section>

</div>